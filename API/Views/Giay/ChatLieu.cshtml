<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <title>Quản lý Chất Liệu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-success mb-4">Quản lý Chất Liệu</h2>

        <!-- Nút mở modal thêm -->
        <button class="btn btn-success mb-3" data-bs-toggle="modal" data-bs-target="#chatLieuModal">
            <i class="fa fa-plus"></i> Thêm chất liệu
        </button>

        <!-- Bảng danh sách -->
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-success">
                <tr>
                    <th>#</th>
                    <th>Tên chất liệu</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Da bò thật</td>
                    <td>Chất liệu bền, sang trọng</td>
                    <td><span class="badge bg-success">Đang sử dụng</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" data-bs-toggle="modal"
                                data-bs-target="#chatLieuModal">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-secondary"><i class="fa fa-refresh"></i> Đổi trạng thái</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Vải canvas</td>
                    <td>Nhẹ, thoáng khí</td>
                    <td><span class="badge bg-secondary">Ngừng sử dụng</span></td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2" data-bs-toggle="modal"
                                data-bs-target="#chatLieuModal">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-success"><i class="fa fa-refresh"></i> Đổi trạng thái</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Modal Thêm/Sửa -->
    <div class="modal fade" id="chatLieuModal" tabindex="-1" aria-labelledby="chatLieuModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="chatLieuModalLabel">Thêm / Sửa chất liệu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="chatLieuId" />
                    <div class="mb-3">
                        <label for="tenChatLieu" class="form-label">Tên chất liệu</label>
                        <input type="text" class="form-control" id="tenChatLieu" name="tenChatLieu" required />
                    </div>
                    <div class="mb-3">
                        <label for="moTa" class="form-label">Mô tả</label>
                        <textarea class="form-control" id="moTa" name="moTa" rows="3"></textarea>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="trangThai" name="trangThai" />
                        <label class="form-check-label" for="trangThai">Đang sử dụng</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary"><i class="fa fa-floppy-disk"></i> Lưu</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Script Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>