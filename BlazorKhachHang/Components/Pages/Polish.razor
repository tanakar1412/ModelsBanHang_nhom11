@page "/polish"

<h3>Polish Shops in Hanoi</h3>

<div class="shop-list">
    @foreach (var shop in polishShops)
    {
        <div class="shop-card">
            <img src="@shop.ImageUrl" alt="@shop.Name" />
            <div class="shop-info">
                <h4>@shop.Name</h4>
                <p>@shop.Address</p>
                <a href="@shop.Link" target="_blank">Visit Website</a>
            </div>
        </div>
    }
</div>

<style>
    .shop-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .shop-card {
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
        transition: transform 0.2s ease;
    }

        .shop-card:hover {
            transform: scale(1.02);
        }

        .shop-card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
        }

    .shop-info {
        padding: 10px;
    }

        .shop-info h4 {
            margin: 5px 0;
        }

        .shop-info p {
            font-size: 14px;
            color: #666;
            margin: 5px 0;
        }

        .shop-info a {
            display: inline-block;
            margin-top: 5px;
            color: #007acc;
            text-decoration: none;
            font-weight: bold;
        }
</style>

