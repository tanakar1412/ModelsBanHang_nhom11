            Date = DateTime.Now.AddDays(-10)
        }
    };

    private BlogPost? selectedPost = null;

    void ShowPopup(BlogPost post)
    {
        selectedPost = post;
    }

    void HidePopup()
    {
        selectedPost = null;
    }
}
